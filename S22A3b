//Method-local inner class:
class Outer {
	public void m1() {
		class Inner {
			public void sum(int i, int j) {
				System.out.println("The sum is : " + (i + j));
			}
		}	
		Inner inner = new Inner();
		inner.sum(10, 10);
		inner.sum(20, 20);
		inner.sum(30, 30);
		inner.sum(40, 40);
	}
	}
	public class S22A3b {
		public static void main(String args[]) {
			Outer outer = new Outer();
			outer.m1();
		}
}
