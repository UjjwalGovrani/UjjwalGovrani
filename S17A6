public class S17A6{
    public static void main(String[] args) {
    	String name = "java python";
    	String capital= "";
    	int obj = 0;
		for (int i=0;i<name.length();i++){
    		 if (name.charAt(i)==' '){
    		   obj=i+1;
    		break;
    		}
    		}
    	char mychar=(char) Character.toUpperCase(name.charAt(obj));
    	String firstLetter=name.substring(0, 1);
    	String remainingLetters=name.substring(1,obj);
    	String lastremaining=name.substring(obj+1);
    	capital=firstLetter.toUpperCase()+remainingLetters+mychar+lastremaining;
    		System.out.println(capital);

    	}
    	}
